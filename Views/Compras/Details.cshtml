@model CRUDCRUD.Models.Compras

@{
    ViewData["Title"] = "Detalles de la Compra";
}

<h2>Detalles de la Compra</h2>

<div>
    <h4>Compra</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Orden ID</dt>
        <dd class="col-sm-10">@Model.IDOrder</dd>

        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.customerName.customerName</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.fecha</dd>

        <dt class="col-sm-2">Detalles de la Compra</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var detalle in Model.DetalleCompras)
                {
                    <li>@detalle.productName - Cantidad: @detalle.Cantidad, Precio: @detalle.Precio</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.IDOrder" class="btn btn-warning">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
