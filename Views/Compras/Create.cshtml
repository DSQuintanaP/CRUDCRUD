@model CRUDCRUD.Models.Compras

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Compras</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="IDCustomer" class="control-label"></label>
                <select asp-for="IDCustomer" class="form-control" asp-items="ViewBag.IDCustomer"></select>
            </div>
            <div class="form-group">
                <label asp-for="fecha" class="control-label"></label>
                <input asp-for="fecha" class="form-control" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="totalValue" class="control-label"></label>
                <input asp-for="totalValue" class="form-control" />
                <span asp-validation-for="totalValue" class="text-danger"></span>
            </div>

            <!-- Campos para los detalles de compra -->
            <h4>Detalles de Compra</h4>
            <div id="detallesContainer">
                <div class="detalle">
                    <div class="form-group">
                        <label>Producto</label>
                        <input name="detalleCompras[0].productName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Cantidad</label>
                        <input name="detalleCompras[0].Cantidad" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="button" onclick="addDetalle()" class="btn btn-secondary">Agregar Detalle</button>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        let detalleIndex = 1; // Para llevar el conteo de los detalles

        function addDetalle() {
            const container = document.getElementById('detallesContainer');
            const newDetalle = `
                <div class="detalle">
                    <div class="form-group">
                        <label>Producto ID</label>
                        <input name="detalleCompras[${detalleIndex}].IDProducto" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Cantidad</label>
                        <input name="detalleCompras[${detalleIndex}].Cantidad" class="form-control" />
                    </div>
                </div>`;
            container.insertAdjacentHTML('beforeend', newDetalle);
            detalleIndex++;
        }
    </script>
}
