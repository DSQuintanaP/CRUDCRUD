@model CRUDCRUD.Models.Compras

@{
    ViewData["Title"] = "Editar Compra";
}

<h2>Editar Compra</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="IDOrder" />

    <div class="form-group">
        <label asp-for="IDCustomer" class="control-label">Cliente</label>
        <select asp-for="IDCustomer" class="form-control" asp-items="ViewBag.IDCustomer"></select>
    </div>

    <div class="form-group">
        <label asp-for="fecha" class="control-label">Fecha</label>
        <input asp-for="fecha" class="form-control" />
    </div>

    <div class="form-group">
        <label>Detalles de la Compra</label>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detalle in Model.DetalleCompras)
                {
                    <tr>
                        <td>@detalle.productName</td>
                        <td>@detalle.Cantidad</td>
                        <td>@detalle.Precio</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Guardar</button> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
